---
// Array de navegación - fácil de expandir
const navItems = [
  { name: 'Inicio', href: '/', current: true }
  // Preparado para: { name: 'Sobre Nosotros', href: '/sobre-nosotros' },
  // Preparado para: { name: 'Propuestas', href: '/propuestas' },
  // Preparado para: { name: 'Contacto', href: '/contacto' }
];

// Información del partido
const partyInfo = {
  name: "Unidos por Chaco",
  shortName: "UCH",
  ctaText: "Unité",
  ctaHref: "#unité"
};
---

<header class="bg-white shadow-md sticky top-0 z-40">
  <div class="container mx-auto">
    <div class="flex items-center justify-between h-16 md:h-20">
      
      <!-- Logo/Nombre del Partido -->
      <div class="flex items-center space-x-2">
        <!-- Placeholder para logo futuro -->
        <div class="w-8 h-8 md:w-10 md:h-10 bg-primary rounded-full flex items-center justify-center">
          <span class="text-white font-bold text-sm md:text-base" aria-label="Logo del partido">
            {partyInfo.shortName}
          </span>
        </div>
        
        <div class="flex flex-col">
          <h1 class="font-bold text-neutral-900 text-sm md:text-lg leading-tight">
            {partyInfo.name}
          </h1>
          <span class="text-xs text-neutral-600 hidden sm:block">
            Tu voz, nuestro compromiso
          </span>
        </div>
      </div>

      <!-- Navegación Desktop -->
      <nav class="hidden md:flex items-center space-x-8" role="navigation" aria-label="Navegación principal">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`text-sm font-medium transition-colors duration-200 hover:text-primary focus:text-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-sm px-2 py-1 ${
              item.current 
                ? 'text-primary border-b-2 border-primary' 
                : 'text-neutral-700'
            }`}
            aria-current={item.current ? 'page' : undefined}
          >
            {item.name}
          </a>
        ))}
      </nav>

      <!-- CTA Desktop + Menu Mobile Button -->
      <div class="flex items-center space-x-4">
        <!-- CTA Button -->
        <a
          href={partyInfo.ctaHref}
          class="btn-base btn-primary text-sm px-4 py-2 md:px-6 md:py-3"
        >
          {partyInfo.ctaText}
        </a>

        <!-- Mobile Menu Button -->
        <button
          type="button"
          class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-neutral-700 hover:text-primary hover:bg-neutral-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary transition-colors duration-200"
          aria-expanded="false"
          aria-controls="mobile-menu"
          id="mobile-menu-button"
        >
          <span class="sr-only">Abrir menú principal</span>
          <!-- Icono hamburger -->
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-neutral-200">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`block px-3 py-2 text-base font-medium rounded-md transition-colors duration-200 ${
              item.current
                ? 'text-primary bg-primary/10 border-l-4 border-primary'
                : 'text-neutral-700 hover:text-primary hover:bg-neutral-50'
            }`}
            aria-current={item.current ? 'page' : undefined}
          >
            {item.name}
          </a>
        ))}
        
        <!-- Información adicional en mobile -->
        <div class="pt-4 border-t border-neutral-200 mt-4">
          <p class="px-3 text-sm text-neutral-600">
            Tu voz, nuestro compromiso
          </p>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Script para toggle del menú móvil -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        
        // Toggle del menú
        mobileMenu.classList.toggle('hidden');
        mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
        
        // Cambiar ícono
        const icon = mobileMenuButton.querySelector('svg');
        if (icon) {
          if (isExpanded) {
            // Mostrar hamburger
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />';
          } else {
            // Mostrar X
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />';
          }
        }
      });
    }
  });
</script>